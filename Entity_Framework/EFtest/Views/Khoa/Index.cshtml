@model IEnumerable<EFtest.Models.Khoa>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" />
<link rel="stylesheet" href="~/Public/Css/Index.css"/>


<h2>Danh sách khoa</h2>

<p>
    <a href="@Url.Action("Create")" class="button"><i class="fas fa-plus"></i> Thêm Khoa</a>
</p>
<table class="table">
    <tr>
        <th>Mã khoa</th>
        <th>Tên khoa</th>
        <th>Chức năng</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.makhoa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tenkhoa)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.makhoa })" class="button"><i class="fas fa-pencil-alt"></i></a> |
                <a href="@Url.Action("Details", new { id = item.makhoa })" class="button"><i class="fas fa-list"></i></a> 
                <form action="@Url.Action("Delete", "Khoa")" method="post" onsubmit="return confirm('Bạn có chắc chắn muốn xóa?')">
                    @Html.Hidden("id", item.makhoa)
                    <button type="submit" class="button delete-button"><i class="fas fa-trash"></i></button>
                </form>
            </td>
        </tr>
    }

</table>
